{% extends "layout.njk" %}
{% block head %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
  <title>Cursos</title>
{% endblock head %}
{% block content %}
  <div id="cursos">
    {% for curso in cursos %}
      <div class="curso" id="{{curso.id}}">
        <img class="curso-image-container" src="{{curso.img}}" alt=""/>
        <div class="curso-content">
          <p class="curso-info">{{curso.info}}</p>
          <p class="curso-price">{{curso.price}}</p>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="modal-overlay">
    <div class="modal">
      <a class="maximize-modal">
        <i class="material-icons">maximize</i>
      </a>
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  <script src="/script.js"></script>
{% endblock content %}